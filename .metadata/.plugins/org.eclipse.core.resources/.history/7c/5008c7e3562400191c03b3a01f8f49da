package com.towerhobbies.HomePage;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.openqa.selenium.support.ui.Select;
import org.testng.annotations.Test;

import com.gargoylesoftware.htmlunit.WebConsole.Logger;
import com.towerhobbies.TestBase.TestBase;


public class RegistrationPage extends TestBase
{

	@FindBy(name="logonId")
	public WebElement EmailIdImput;
	
	@FindBy(id="WC_UserRegistrationAddForm_FormInput_logonPassword_In_Register_1")
	public WebElement PasswordInput;
	
	@FindBy(name="logonPasswordVerify")
	public WebElement PasswordVerifyInput;
	
	@FindBy(name="firstName")
	public WebElement FirstNameInput;
	
	@FindBy(name="lastName")
	public WebElement LastNameInput;
	
	@FindBy(name="address1")
	public WebElement AddressInput;
	
	@FindBy(name="city")
	public WebElement CityInput;
	
	@FindBy(name="zipCode")
	public WebElement ZipcodeInput;
	
	@FindBy(name="phone1")
	public WebElement PhoneInput;
	
	@FindBy(id="WC_UserRegistrationAddForm_AddressEntryForm_FormInput_country_1")
	public WebElement CountryDropDown;
	
	@FindBy(id="WC_UserRegistrationUpdateForm_FormInput_enrollInRewards_In_Register_1")
	public WebElement RewardEnrollCheckBox;
	
	@FindBy(name="birth_month")
	public WebElement BirthMonthDropDown;
	
	@FindBy(name="birth_date")
	public WebElement BirthDateDropDown;
	
	@FindBy(name="birth_year")
	public WebElement BirthYearDropdown;
	
	@FindBy(id="WC_UserRegistrationAddForm_links_1")
	public WebElement SubmitButton;
	
	@FindBy(id="WC_UserRegistrationAddForm_links_2")
	public WebElement CancelButton;
	
	
	public RegistrationPage(WebDriver driver)
	{
		this.driver = driver;
		PageFactory.initElements(driver, this);

	}
	
	public void Register()
	{
		//driver.get("https://www.dev.towerhobbies.de");
		driver.findElement(By.id("SignInLink")).click();
		driver.findElement(By.linkText("Registrieren")).click();
		
		//driver.findElement(By.id("WC_UserRegistrationAddForm_FormInput_logonPassword_In_Register_1")).click();
		this.EmailIdImput.sendKeys("ankur.rana@gmx.com");
		this.PasswordInput.sendKeys("ankur123");
		this.PasswordVerifyInput.sendKeys("ankur123");
		this.FirstNameInput.sendKeys("Ankur");
		this.LastNameInput.sendKeys("Rana");
		this.AddressInput.sendKeys("H67");
		this.CityInput.sendKeys("City");
		this.ZipcodeInput.sendKeys("122001");
		
		Select days = new Select(this.BirthDateDropDown);
		days.selectByIndex(5);
		
		Select months = new Select(this.BirthMonthDropDown);
		months.selectByIndex(7);
		
		Select years = new Select(this.BirthYearDropdown);
		years.selectByValue("1990");
		
		this.SubmitButton.click();
		
		
		
	}
	
   
}
